<%- include("../partials/header.ejs")%>
<% if(bool === true){ %>
    <h2>There is no examiner in this zone.</h2>
  <% } else {%> 
    <div class=" container">
      <h3>List of all examiners in zone <%= zone %></h3>
    <table class="table table-primary table-striped">
        <thead>
          <tr>
            <th scope="col">Examiner Code</th>
            <th scope="col">Name</th>
            <th scope="col">Phone</th>
            <th scope="col">Address</th>
            <th scope="col">Exams</th>
          </tr>
        </thead>
        <tbody>
        <% for(var i=0;i<display.length;i++) { %>  
          <tr>
            <td><%= display[i].code %></td>
            <td><%= display[i].name %></td>
            <td><%= display[i].phone %></td>
            <td><%= display[i].address %></td>
            <td><form class="viewExamByExaminerCode" action="/viewExamByExaminerCode" method="post">
              <div class="form-group">
                  <input type="hidden" class="form-control" id="code" name="code" value="<%= display[i].code %>">
                  <button class="poster"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-card-list" viewBox="0 0 16 16">
                    <path d="M14.5 3a.5.5 0 0 1 .5.5v9a.5.5 0 0 1-.5.5h-13a.5.5 0 0 1-.5-.5v-9a.5.5 0 0 1 .5-.5zm-13-1A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h13a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 14.5 2z"/>
                    <path d="M5 8a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7A.5.5 0 0 1 5 8m0-2.5a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7a.5.5 0 0 1-.5-.5m0 5a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7a.5.5 0 0 1-.5-.5m-1-5a.5.5 0 1 1-1 0 .5.5 0 0 1 1 0M4 8a.5.5 0 1 1-1 0 .5.5 0 0 1 1 0m0 2.5a.5.5 0 1 1-1 0 .5.5 0 0 1 1 0"/>
                  </svg></button>
              </div>
          </form></td>
          </tr>
        <% } %>
        </tbody>
      </table>
    </div> 
<% } %>  
<%- include("../partials/footer.ejs")%>