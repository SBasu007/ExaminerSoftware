<%- include("partials/header.ejs")%>
    <div class="form">
        <form class="examiner" action="/createExam" method="post">
            <h3>New Exam</h3>
                <input type="hidden" class="form-control" id="school_code" name="school_code" value="<%= code%>">
            <div class="form-group">
                <label for="code">Session: </label>
                <input type="text" class="form-control" id="session" name="session">
            </div>
            <div class="form-group">
                <label for="name">Month:</label>
                <input type="text" class="form-control" id="month" name="month">
            </div>
            <div class="form-group">
                <label for="phone">Date:</label>
                <input type="text" class="form-control" id="date" name="date">
            </div>
            <div class="form-group">
                <label for="phone">Agent Code:</label>
                <input type="text" class="form-control" id="agent_code" name="agent_code">
            </div>
            <div class="form-group">
                <label for="phone">Total number of forms:</label>
                <input type="text" class="form-control" id="forms" name="forms" required>
            </div>
            <div class="form-group">
                <label for="phone">Total collection:</label>
                <input type="text" class="form-control" id="collection" name="collection" required>
            </div>
            <div class="button-submit">
                <button type="submit" class="btn btn-primary">Submit</button>
              </div>
        </form>
        
    </div>
<%- include("partials/footer.ejs")%>